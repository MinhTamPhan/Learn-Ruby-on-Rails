<h1>Listing articles</h1>
<%= link_to 'New article', new_article_path %>
<table class ='table table-hover'>
  <tr class = "info">
    <th>Title</th>
    <th>Text</th>
    <th>&nbsp;</th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr class="success">
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>